{% extends 'base.html.twig' %}

{% block title %}Recettes index{% endblock %}

{% block body %}
    <h1>Recettes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>TempsPreparation</th>
                <th>TempsCuisson</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.titre }}</td>
                <td>{{ recette.image }}</td>
                <td>{{ recette.TempsPreparation }}</td>
                <td>{{ recette.TempsCuisson }}</td>
                <td>{{ recette.Prix }}</td>
                <td>
                    <a href="{{ path('recettes_show', {'id': recette.id}) }}">show</a>
                    <a href="{{ path('recettes_edit', {'id': recette.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recettes_new') }}">Create new</a>
{% endblock %}
